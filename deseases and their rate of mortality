import pandas as pd
import matplotlib.pyplot as plt
import numpy as np
import seaborn as sns

# Define countries of interest
countries = ["United States", "United Kingdom", "Belgium", "Hungary", "Canada", "Australia", "Russia", "China", "France", "India"]

# Load data
data = pd.read_csv(https://data.worldbank.org/)  

# Filter data for selected countries
df_filtered = data[data["Country"].isin(countries)]

# Age Range of Disease Prevalence (Bar Chart)
age_groups = df_filtered.groupby("Age Range")["Disease Rate"].mean().reset_index()
figure(figsize=(10, 6))
sns.barplot(x="country", y="Disease Rate", data=age_groups)
xlabel("Age Range",country)
ylabel("Disease Rate (decimal)")
title("Disease Prevalence by Age Range in Selected Countries")
xticks(rotation=45, ha="right")
tight_layout()

# Overall Disease Rate by country (Pie Chart)
disease_rates = df_filtered.groupby("Country")["Disease Rate"].mean().reset_index()
figure(figsize=(6,6))
pie(disease_rates["Disease Rate"],labels=disease_rates["Country"],autopct="%1.1f%%")
title("Overall Disease Rate in Selected Countries")
axis("equal")  
("isolate the highly affected country")

# Mortality Rate from household activities, Pollution (area Chart)
pollution, household activities_mortality = df_filtered.groupby("Country")["Pollution Mortality Rate"].mean().reset_index()
figure(figsize=(6,6))
area(pollution, household activities_mortality["Pollution,household activities Mortality Rate"], labels=pollution_mortality["Country"], autopct="%1.1f%%")
title("Mortality Rate from Household & Ambient Air Pollution (per 10,000 population)")
axis("equal")

# Death Rate by Disease Type (line Graph)
communicable_death_rate = np.mean(df_filtered[df_filtered["Disease Type"] == "Communicable"]["Death Rate"])
noncommunicable_death_rate = np.mean(df_filtered[df_filtered["Disease Type"] == "Non-Communicable"]["Death Rate"])
total_death_rate = communicable_death_rate + noncommunicable_death_rate
figure(figsize=(8,5))
bar(["Communicable","Non-Communicable"],[communicable_death_rate,noncommunicable_death_rate],color=["brown","blue"])
xlabel("Disease Type")
ylabel("Death Rate (%)")
title("Death Rate Caused by Communicable and Non-Communicable Diseases (% of total)")
ylim(0,total_death_rate*1.1)  
plt.savefig("22082391.png",dpi=300)
